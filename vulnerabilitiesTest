whois <domain>

dnsrecon -d <domain | host>

whatweb <url>

nc <host> 3306  # to get MySQL or MariaDB database version

wpscan --stealthy --url <url>  # only for Wordpress websites

curl -s -o /dev/null -w "%{http_code}" -H "Host: malicious.example.com" <url>   # host header injection test

sslscan <url | host>

sudo nmap <host>

sudo nmap -sV -sC --script vuln* -O -p <port1,port2,...> <host>

echo <IPv4> | nrich -

chrome Browser > developer tools > lighthouse

